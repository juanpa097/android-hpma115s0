<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="hpsaturn.pollutionreporter.dashboard.presentation.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="hpsaturn.pollutionreporter.view.MapFragment"
        android:label="MapFragment"
        tools:layout="@layout/fragment_osmap" />
    <fragment
        android:id="@+id/recordsFragment"
        android:name="hpsaturn.pollutionreporter.view.RecordsFragment"
        android:label="RecordsFragment"
        tools:layout="@layout/fragment_records" />
    <fragment
        android:id="@+id/scanFragment"
        android:name="hpsaturn.pollutionreporter.view.ScanFragment"
        android:label="ScanFragment"
        tools:layout="@layout/fragment_devices" />
    <fragment
        android:id="@+id/sensorReportInformationListFragment"
        android:name="hpsaturn.pollutionreporter.reports.open.presentation.OpenSensorReportsInformationListFragment"
        android:label="fragment_sensor_report_information_list"
        tools:layout="@layout/fragment_sensor_report_information_list">
        <action
            android:id="@+id/action_graph"
            app:destination="@id/sensorReportDataGraphFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit" />
    </fragment>
    <fragment
        android:id="@+id/sensorReportDataGraphFragment"
        android:name="hpsaturn.pollutionreporter.reports.graph.presentation.SensorReportDataGraphFragment"
        android:label="fragment_sensor_report_data_graph"
        tools:layout="@layout/fragment_sensor_report_data_graph">
        <argument
            android:name="reportId"
            app:argType="string" />
    </fragment>
</navigation>